<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageButton
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:id="@+id/imageButton"
        android:background="@drawable/add_order"
        android:onClick="addOrder"
        android:layout_marginTop="43dp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:id="@+id/imageButton2"
        android:onClick="addUser"
        android:background="@drawable/add_user"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/imageButton3"
        android:background="@drawable/view_user"
        android:onClick="viewCustomers"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:hint="Customer ID"
        android:id="@+id/editText"
        android:layout_above="@+id/imageButton4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <ImageButton
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:onClick="deleteUser"
        android:id="@+id/imageButton4"
        android:background="@drawable/delete_user"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
